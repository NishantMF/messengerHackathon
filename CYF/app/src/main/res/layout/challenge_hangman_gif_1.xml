<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/bg1"
    android:weightSum="1"
    style="@style/com_facebook_loginview_silver_style"
    android:gravity="center_vertical|center_horizontal|left">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hangman_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nishant Varshney"
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ff060606"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="challenged you."
        android:id="@+id/challengeText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff0d0d0d"
        android:textSize="30dp" />


</LinearLayout>
